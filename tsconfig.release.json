{
    "compilerOptions":{
        "module": "amd",
        "removeComments": true,
        "outFile":"build/release/canvas-toy.js",
        "noLib": false,
        "target": "es5",
        "sourceMap": false,
        "allowJs": true
    },
    "include":[
        "lib/**/*.js",
        "typings/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude":[
        "examples/**/*.ts",
        "tests/**/*.ts",
        "build/**/*.ts",
        "node_modules/**/*.ts"
    ],
   "compileOnSave": false
}
